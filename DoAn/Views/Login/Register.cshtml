@model DoAn.Models.Account

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
        font-size: 0.9em;
    }

    .login__input {
        margin-bottom: 10px;
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .login__btn {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        margin-top: 20px;
    }

        .login__btn:hover {
            background-color: #45a049;
        }
</style>

<div class="main">
    <div class="content">
        <div class="grid wide">
            <h4 class="login__header">Register</h4>
            <div class="login__container">
                @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Name Account -->
                    <p class="login__name">@Html.LabelFor(model => model.NameAccount) <span class="red">*</span></p>
                    @Html.TextBoxFor(model => model.NameAccount, new { @class = "login__input", placeholder = "Your Name" })
                    @Html.ValidationMessageFor(model => model.NameAccount)

                    <!-- Email -->
                    <p class="login__name">@Html.LabelFor(model => model.Email) <span class="red">*</span></p>
                    @Html.TextBoxFor(model => model.Email, new { @class = "login__input", type = "email", placeholder = "Your Email" })
                    @Html.ValidationMessageFor(model => model.Email)

                    <!-- Password -->
                    <p class="login__name">@Html.LabelFor(model => model.Password_User) <span class="red">*</span></p>
                    @Html.PasswordFor(model => model.Password_User, new { @class = "login__input", placeholder = "Your Password" })
                    @Html.ValidationMessageFor(model => model.Password_User)

                    <!-- Confirm Password -->
                    <p class="login__name">@Html.LabelFor(model => model.ConfirmPass) <span class="red">*</span></p>
                    @Html.PasswordFor(model => model.ConfirmPass, new { @class = "login__input", placeholder = "Confirm Password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPass)

                    <!-- Phone Number -->
                    <p class="login__name">@Html.LabelFor(model => model.PhoneNumber) <span class="red">*</span></p>
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "login__input", type = "tel", placeholder = "Your PhoneNumber" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber)

                    <!-- City -->
                    <p class="login__name">@Html.LabelFor(model => model.City)</p>
                    @Html.TextBoxFor(model => model.City, new { @class = "login__input", placeholder = "Your City" })
                    @Html.ValidationMessageFor(model => model.City)

                    <!-- Submit Button -->
                    <input type="submit" value="Register" class="login__btn" />
                }
            </div>
        </div>
    </div>
</div>
