@model DoAn.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <!-- Location -->
    <div class="location">
        <div class="grid wide">
            <div class="location__container">
                <a href="#" class="location__link"><i class="location__icon fa-solid fa-house"></i></a>
                <p class="location__text">/ Details</p>
            </div>
        </div>
    </div>
    <!-- End Location -->
    <!-- Content -->
    <div class="content">
        <div class="grid wide">
            <h2>Delete</h2>
            <h3>Are you sure you want to delete this?</h3>
            <div class="content__container row">
                <div class="content-left l-5 m-5 c-12">
                    <div class="content-box__img">
                        <img src="@Url.Content(Model.ImagePro)" width="100%" height="100%" />
                    </div>
                </div>
                <div class="content-right l-7 m-7 c-12">
                    <div class="content__product">
                        <h3 class="product__name">@Html.DisplayFor(model => model.NamePro)</h3>
                        <p class="product__price">@Html.DisplayFor(model => model.Price)</p>
                        <p class="product__decription">@Html.DisplayFor(model => model.Description_Pro)</p>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Delete" class="product__btn" />
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "menu__link" })
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Content -->
</div>